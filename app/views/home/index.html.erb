<div class="row">
  <div class="col-md-12">
    <h1>Please upload image sequences to compare!</h1>
    <%= form_tag("/home/compare", method: "post", remote: true, multipart: true) do %>
      <div class="form-group">
        <%= label_tag(:seq1, "Previous Sequence") %>
        <%= file_field_tag('seq1[]', multiple: true, accept: 'image/png', class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= label_tag(:seq2, "Current Sequence") %>
        <%= file_field_tag('seq2[]', multiple: true, accept: 'image/png', class: 'form-control') %>
      </div>
      <%= hidden_field_tag :unqid, Time.now.to_f %>
      <%= submit_tag("Compare", class: 'btn btn-primary') %>
    <% end %>

    <hr>

    <div class="progress" style="display: none;">
      <div class="progress-bar bg-success progress-bar-striped" style="width:0%"></div>
    </div>
    <br>
    <div class="result" style="display: none">
      <p></p>
    </div>
  </div>
</div>